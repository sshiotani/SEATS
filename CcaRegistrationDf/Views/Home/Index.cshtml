@{
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<!-- Section: about -->
@if (!Request.IsAuthenticated) //User is not logged in.
{
    <div class="heading-about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="wow bounceInDown" data-wow-delay="0.4s">
                        <div class="section-heading">
                            <h2>Get Started</h2>
                            <i class="fa fa-2x fa-angle-down"></i>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">

        <div class="row">
            <div class="col-lg-2 col-lg-offset-5">
                <hr class="marginbot-50">
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInLeft" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Account/Register/" class="glyphicon glyphicon-pencil"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Account/Register/"><h5>Register</h5></a>
                            <p>If you are new to Utah Public Education Online and would like to register for a account.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Account/Login/" class="glyphicon glyphicon-log-in"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Account/Login/"><h5>Login</h5></a>
                            <p>If you already have an existing account.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Home/About/" class="glyphicon glyphicon-info-sign"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Home/About/"><h5>Learn More</h5></a>
                            <p>More information about the Utah Online Public Education Program.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInRight" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Home/Contact/" class="glyphicon glyphicon-phone-alt"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Home/Contact/"><h5>Contact Us</h5></a>
                            <p>Still have questions?</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="heading-about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="wow bounceInDown" data-wow-delay="0.4s">
                        <div class="section-heading">
                            <h2>Welcome!</h2>
                            <i class="fa fa-2x fa-angle-down"></i>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">

        <div class="row">
            <div class="col-lg-2 col-lg-offset-5">
                <hr class="marginbot-50">
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInRight" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Admin/" class="glyphicon glyphicon-pencil"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Admin/"><h5>Adminstrator Tools</h5></a>
                            <p>Manage Courses, Categories, Providers, and Sessions.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInRight" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Account/" class="glyphicon glyphicon-pencil"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Account/"><h5>Manage Users</h5></a>
                            <p>Add and edit user accounts.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-sm-3 col-md-3">
                <div class="wow fadeInRight" data-wow-delay="0.2s">
                    <div class="service-box">
                        <div class="service-icon">
                            <a href="/Manage/" class="glyphicon glyphicon-pencil"></a>
                        </div>
                        <div class="service-desc">
                            <a href="/Manage/"><h5>Manage My Account</h5></a>
                            <p></p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="col-sm-3 col-md-3">
            <div class="wow fadeInRight" data-wow-delay="0.2s">
                <div class="service-box">
                    <div class="service-icon">
                        <a href="/Account/" class="glyphicon glyphicon-pencil"></a>
                    </div>
                    <div class="service-desc">
                        <a href="/MainTables/Create"><h5>Course Registration</h5></a>
                        <p>Registration form for online courses.</p>
                    </div>
                </div>
            </div>
        </div>

        <br />
    </div>
}

<!-- /Section: Services -->
