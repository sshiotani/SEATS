
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/HomeLayout2.cshtml";
}


<div class="heading-about">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <div class="wow bounceInDown" data-wow-delay="0.4s">
                    <div class="slogan">
                        <h4>@User.Identity.Name, please select from the options below.</h4>
                        <i class="fa fa-2x fa-angle-down"></i>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <div class="row">
        <div class="col-lg-2 col-lg-offset-5">
            <hr class="marginbot-50">
        </div>
    </div>

    <div class="col-sm-3 col-md-3">
        <div class="wow fadeInRight" data-wow-delay="0.2s">
            <div class="service-box">
                <div class="service-icon">
                    <a href="/Manage/" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-pencil"></span></a>

                </div>
                <div class="service-desc">
                    <a href="/Manage/"><h5>Manage My Account</h5></a>
                    <p></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-3">
        <div class="wow fadeInLeft" data-wow-delay="0.2s">
            <div class="service-box">
                <div class="service-icon">
                    <a href="/CCAs/Create" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-pencil"></span></a>

                </div>
                <div class="service-desc">
                    <a href="/CCAs/Create"><h5>Registration</h5></a>
                    <p>Register for online courses</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-3">
        <div class="wow fadeInUp" data-wow-delay="0.2s">
            <div class="service-box">
                <div class="service-icon">
                    <a href="/CCAs/" class="btn btn-info btn-lg"><span class="glyphicon glyphicon-list-alt"></span></a>

                </div>
                <div class="service-desc">
                    <a href="/CCAs/"><h5>Applications</h5></a>
                    <p>List of my applications</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-3">
        <div class="wow fadeInUp" data-wow-delay="0.2s">
            <div class="service-box">
                <div class="service-icon">
                    <a href="/Home/About/" class="btn btn-info btn-lg"><span class=" glyphicon glyphicon-info-sign"></span></a>
                </div>
                <div class="service-desc">
                    <a href="/Home/About/"><h5>Learn More</h5></a>
                    <p>SEOP Information</p>
                </div>
            </div>
        </div>
    </div>
</div>