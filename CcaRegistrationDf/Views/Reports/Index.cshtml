@model IEnumerable<CcaRegistrationDf.Models.ReportViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Monthly Distribution Report</h2>

<div style="padding:10px;">
    <row>
        <a href="@Url.Action("GenerateReport", new { id = "Excel" })"><img src="~/Content/Images/excel-icon-sm.png" /></a>
        @*<a href="@Url.Action("GenerateReport", new { id = "PDF" })"><img src="~/Content/Images/pdf-icon-sm.png" /></a>
        <a href="@Url.Action("GenerateReport", new { id = "Word" })"><img src="~/Content/Images/word-icon-sm.png" /></a>*@
        @*<a href="@Url.Action("MakeReport", new { id = "Image" })"><img src="~/Content/Images/img-icon-sm.png" /></a>*@
    </row>
</div>
<p class = "text-info">Report truncated for display purposes.</p>
<table id="grid-basic" class="table table-hover table-striped bg-white">
    <thead>
        <tr>
            <th data-column-id="First">
                @Html.DisplayName("Student First Name")
            </th>
            <th data-column-id="Last">
                @Html.DisplayName("Student Last Name")
            </th>
            <th data-column-id="SSID">
                @Html.DisplayName("SSID")
            </th>
            <th data-column-id="Credit">
                @Html.DisplayName("Credit")
            </th>
            <th data-column-id="Provider">
                @Html.DisplayName("Provider")
            </th>
            <th data-column-id="Primary">
                @Html.DisplayName("Primary")
            </th>

            <th data-column-id="Category">
                @Html.DisplayName("Category")
            </th>
            <th data-column-id="Course">
                @Html.DisplayName("Course")
            </th>

           
        </tr>
    </thead>


  
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentFirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentLastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SSID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseCredit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnlineCourse)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.BudgetPrimaryProvider)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PriorDisbursementProvider)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Offset)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distribution)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDisbursementsProvider)
                </td>*@

            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/bootgrid")
    <script>
        // This script uses Jquery Bootgrid to format the data into a grid.  It also creates buttons form the edit, delete, details actions.
        $(function () {
            var grid = $("#grid-basic").bootgrid();

        });

    </script>
}
